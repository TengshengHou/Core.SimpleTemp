@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*

    编辑页面通用模板，为迎合框架内部Js部分规则一定义好
    如需有特殊需求请注意一下几点
    formId、onsubmit
    BtnSave

*@


@model Core.SimpleTemp.Application.SysDepartmentDto
@{
    Layout = "_EditView";
}
@section scripts{

    <script src="~/Views/Role/Edit.js"></script>
}
<form id="addForm" onsubmit="return false" class="form-horizontal">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="box-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="">部门名称</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name" value="@Model.Name" autocomplete="off" type="text">
            </div>
        </div>
    </div>

    <input id="btnSave" class="btn btn-primary" type="submit" style="display:none" value="保存" />
</form>
