@model Core.SimpleTemp.Application.UserApp.SysUserDto

<div class="row">
    <div class="col-md-12">
        <div id="toolbar">
            <div class="">
                <form role="form" id="searchForm" class="form-inline">
                    <div class="form-group">
                        <label for="Name">用户&nbsp;&nbsp;</label>
                        <input type="text" asp-for="Name" class="form-control" data-filter="true" data-action="in" value="" />
                    </div>
                    &nbsp;&nbsp;
                    <button id="btnScreen" type="button" class="btn btn-default">查询</button>

                    <button id="btnAdd" title="" class="btn btn-primary @UserPermission.UserController_Edit" type="button" data-original-title="新增功能" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-circle"></i>&nbsp;&nbsp;新增
                    </button>
                    <button id="btnDelete" title="" class="btn btn-danger @UserPermission.UserController_Delete" type="button" data-original-title="删除功能" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;删除
                    </button>

                </form>
            </div>
        </div>
        <div class="box box-primary  " style="padding-left:10px;padding-right:10px">
            <table id="table"
                   data-toolbar="#toolbar"
                   data-toggle="table"
                   data-height="660"
                   data-ajax="ajaxRequest"
                   data-side-pagination="server"
                   data-pagination="true"></table>
        </div>

    </div>
</div>
@section scripts{
    <script src="~/js/CommonList.js"></script>
    <script src="~/Views/User/Index.js"></script>
}
